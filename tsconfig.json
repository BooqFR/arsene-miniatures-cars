{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "lib": ["ESNext", "dom"],
    "types": ["node", "jest"],
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@firebase/*": ["./src/firebase/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
