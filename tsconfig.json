{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "lib": ["ESNext", "dom"],
    "types": ["node", "jest"],
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
